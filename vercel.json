{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/",
      "dest": "/pages/index.html"
    },
    {
      "src": "/contest-registration",
      "dest": "/pages/contest-registration.html"
    },
    {
      "src": "/trivia",
      "dest": "/trivia/index.html"
    },
    {
      "src": "/trivia/(.*)",
      "dest": "/trivia/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
